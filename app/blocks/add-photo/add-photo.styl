.add-photo
	padding 10px
	display flex
	flex-wrap wrap
	width 100%
	background-color #fff
	border 1px dashed #ababab
	
	+above(768px)
		padding 24px
		
	&__control
		position absolute
		left -9999px
		top -9999px
		opacity 0
		font-size 0
		clip rect(1px 1px 1px 1px)
	
	&__item
		position relative
		margin 0 1px 2px
		display flex
		min-width 19%
		height 55px
		flex-direction column
		justify-content center
		align-items center
		text-align center
		background-color #fff
		border 1px solid $colorDecorative
		
		img
			max-height 100%
			max-width 100%
		
		+above(768px)
			width 19.63%
			height 75px
		
		+above(980px)
			width 12.5%
			min-width 116px
			height 100px

		&_main
			flex-direction row
			width 100%
			height 50px
			font-size 16px
			font-weight bold
			color #fff
			background-color $colorSecondary
			background-image linear-gradient(to right, $colorSecondary, #528AE0)
			cursor pointer
			
			+above(980px)
				height auto
			
			+above(980px)
				flex-direction column
				width 23.6%
				height 100px
				
		&_error
			border-color $colorMain
				
	&__item-remove
		position absolute
		right 3px
		top 3px
		size 30px
		cursor pointer
		background-color #fff
		border-radius 50%
		
		&::before,
		&::after
			position absolute
			left 50%
			top 5px
			width 2px
			height 20px
			margin-left -1px
			content ''
			background-color $colorMain
			
		&::before
			transform rotate(-45deg)
			
		&::after
			transform rotate(45deg)
			
	&__progress
		position absolute
		left 0
		right 0
		bottom 0
		height 4px
		background-color rgba(#fff, .7)
		
	&__progress-bar
		display block
		height 100%
		background-color $colorSecondary
		
	&__progress-bar_success
		height 100%
		background-color $colorAkcent

	&__icon
		display inline-block
		
		+above(980px)
			margin-bottom 10px
			margin-right 0
			display block
		
		&:last-child
			margin-bottom 0
		
		&_tap
			sprite $tap
			margin-right 20px
			
		&_drive
			sprite $drive
			
		&_forward
			sprite $forward
			
		&_left
			sprite $left
		
		&_db
			sprite $db
			
		&_df
			sprite $df
			
		&_right
			sprite $right