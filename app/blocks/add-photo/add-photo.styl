.add-photo
	padding 10px
	display flex
	flex-wrap wrap
	background-color #fff
	border 1px dashed #ababab
	
	+above(768px)
		padding 24px
	
	&__item
		margin 0 1px 2px
		display flex
		min-width 19%
		height 55px
		flex-direction column
		justify-content center
		align-items center
		text-align center
		background-color #fff
		border 1px solid $colorDecorative
		
		img
			max-height 100%
		
		+above(768px)
			width 19.63%
			height 75px
		
		+above(980px)
			width 12.5%
			height 100px

		&_main
			flex-direction row
			width 100%
			height 50px
			font-size 16px
			font-weight bold
			color #fff
			background-color $colorSecondary
			background-image linear-gradient(to right, $colorSecondary, #528AE0)
			
			+above(980px)
				height auto
			
			+above(980px)
				flex-direction column
				width 23.6%
				height 100px

	&__icon
		display inline-block
		
		+above(980px)
			margin-bottom 10px
			margin-right 0
			display block
		
		&:last-child
			margin-bottom 0
		
		&_tap
			sprite $tap
			margin-right 20px
			
		&_drive
			sprite $drive
			
		&_forward
			sprite $forward
			
		&_left
			sprite $left
		
		&_db
			sprite $db
			
		&_df
			sprite $df
			
		&_right
			sprite $right