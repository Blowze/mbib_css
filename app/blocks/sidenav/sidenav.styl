.sidenav
	position relative
	display block
	height 100%
	
	&__btn
		position relative
		height 100%
		
	&__btn-inner
		position absolute
		top 50%
		left 50%
		margin -1px 0 0 -17px
		width 34px
		height 2px
		background-color #fff
		
		&::before,
		&::after
			position absolute
			left 0
			width 100%
			height 100%
			content ''
			background-color #fff
		
		&::before
			top -8px
			
		&::after
			bottom -8px

	&__body
		position fixed
		z-index 100
		top 0
		right 0
		left 0
		bottom 0
		padding 73px 30px 30px
		color #fff
		background-color $colorText
		will-change transform
		transition transform .4s
		transform translate3D(-100%, 0, 0)
		
	&__action
		margin-bottom 14px
		padding 20px 0
		font-size 16px
		border-bottom 1px solid rgba(#fff, .23)
		
	&__action-link
		margin-bottom 5px
		padding 5px 0 5px 30px
		display block
		text-decoration none
		color #fff
		
	&__action-text
		display inline-block
		border-bottom 1px solid rgba(#fff, .23)
		
		^[0]__action-link_pseudo &
			border-bottom-style dashed