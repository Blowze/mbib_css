.thumb-gallery
	position relative
	display flex
	height 100%
	
	&__item
		padding 3px 2px
		width 100%
		height 100%
		display flex
		align-items flex-end
		
		&_column_2
			width 50%
			
		&_column_3
			width 33.333%
		
		&_column_4
			width 25%
			
		&_column_5
			width 20%
			
	&__img-wrap
		position absolute
		z-index -3
		top 0
		left 0
		width 100%
		height auto
		opacity 0
		
		^[0]__item:hover &
			z-index -1
			opacity 1
	
	&__marker
		position relative
		z-index 1
		display block
		width 100%
		height 3px
		background-color #fff
		transition background-color .3s
		
		^[0]__item:hover &
			background-color $colorMain
