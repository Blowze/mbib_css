include ../input/input
include ../select/select
include ../lbl/lbl
include ../btn/btn
include ../popup/popup
include ../menu/menu
include ../form/form
include ../geoplace/geoplace-list

mixin modal-place()
	+b.modal#modalPlace&attributes(attributes)._size_m.mfp-with-anim.mfp-hide
		//.mfp-hide
		+e.head
			+e.H5.title Выбрать место поиска
			+e.SPAN.close.mfp-close
				+icon('close', false).close-icon
		+e.inner
			+e.body
				+form(name="place").geoplace
					+e.row
						+e.item._fullwidth
							+lbl(for="placeField" hidden)
							+select(name="place" id="placeField" data-placeholder="Регион, город, населенный пункт" tabindex="1")._dont-use-modal.geoplace__field
								option(value="")
								option(value="pl1") Audi
								option(value="pl2") BMW
								option(value="pl3") Kia
								option(value="pl4") Lada
								option(value="pl5") ЗАЗ
								option(value="pl6") ГАЗ
								option(value="pl7") УАЗ
								option(value="pl8") BMW
								option(value="pl9") Kia
								option(value="pl0") Lada
								option(value="pl11") ЗАЗ
								option(value="pl12") ГАЗ
								option(value="pl13") УАЗ
							//- +input(type="text" id="placeField" value="" placeholder="Регион, город, населенный пункт").geoplace__field
							+popup.geoplace__popup
								+geoplace-list(getData('geoplace'))
					+e.row.geoplace__area
						+e.item._fullwidth
							+btn('link', 'close')(href="")._theme_pseudo._size_s.geoplace__item Москва
							+btn('link', 'close')(href="")._theme_pseudo._size_s.geoplace__item Московская область
							+btn('link', 'close')(href="")._theme_pseudo._size_s.geoplace__item Калининград
					+e.row._align_right
						+e.item._fullwidth
							+btn('button')(type="button")._theme_secondary Сохранить