.control
	padding 12px 16px
	display inline-block
	text-decoration none
	color darken($colorDecorative, 40)
	background-color #fff
	border 1px solid $colorDecorative
	border-left none
	transition color .3s
	
	.control-group &
		&:first-child 
			border-left 1px solid $colorDecorative
			
	.control-group_flex &
		flex-grow 1
		
	&:hover
		color $colorText
	
	&_disabled,
	&_disabled:hover
		cursor default
		color $colorDecorative
		
	&_active,
	&_active:hover
		color $colorText
		background-color lighten($colorDecorative, 10)
