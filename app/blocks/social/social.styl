.social
  margin-bottom 10px
  margin-right 15px
  display flex
  color inherit

  +above(768px)
    margin-bottom 0

  &__item
    margin 0 5px
    display inline-flex
    align-items center
    justify-content center
    width 24px
    height  24px
    color inherit

    +above(768px)
      margin 0 10px

  &_view_block &__item
    width 36px
    height 36px
    background-color red
    border-radius 4px
    color #fff

    &_fb
      background-color #3b5998

    &_twi
      background-color rgba(29,161,242,1.00)

    &_vk
      background-color #4a76a8

    &_ok
      background-color #ee8208

  &__icon
    width 20px
    height 20px
