.radio
	position relative
	display block
	padding 5px 0 6px 35px
	
	&__control
		position absolute
		left -9999px

	&__text
		position relative
		margin-top 1px
		display inline-block
		vertical-align top
		
		&:before
			position absolute
			top -2px
			left -30px
			margin 0 4px 0 0
			size 16px
			vertical-align middle
			cursor pointer
			content ''
			background-color #fff
			border 1px solid $colorDecorative
			border-radius 50%
			transition background-color .3s, border-color .3s
			
		&:hover:before
			border 1px solid $colorDecorative
			
		
	&__control:checked:focus + &__text:before,
	&__control:focus + &__text:before 
		border-color $colorSecondary
		
	&__control + &__text:after
		position absolute
		top 4px 
		left -24px
		size 6px
		content ''
		background-color $colorMain
		border-radius 50%
		opacity 0
		transition all .3s
		transform scale(0)
		
	&__control:checked + &__text:after
		transform scale(1)
		opacity 1
