.radio
	position relative
	display block
	padding 6px 0 7px 35px
	
	&__control
		position absolute
		left -9999px

	&__text
		position relative
		margin-top 1px
		display inline-block
		vertical-align top
		
		&:before
			position absolute
			top -6px
			left -35px
			margin 0 4px 0 0
			size 25px
			vertical-align middle
			cursor pointer
			content ''
			background-color #f8f8f8
			box-shadow inset 0 2px 6px rgba(#000, .25)
			border-radius 50%
			transition background-color .3s
			
		&:hover:before
			background-color $colorMain
			
		
	&__control:checked:focus + &__text:before,
	&__control:focus + &__text:before 
		border-color $colorMain
		
	&__control + &__text:after
		position absolute
		top 0px 
		left -29px
		size 13px
		content ''
		background-color #fff
		border-radius 50%
		opacity 0
		transition all .3s
		transform scale(0)
		box-shadow 0 2px 5px rgba(#000, .25)
		
	&__control:checked + &__text:before
		background-color $colorMain
		box-shadow none
		
	&__control:checked + &__text:after
		transform scale(1)
		opacity 1
