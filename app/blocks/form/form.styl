.form
	display block

	&__message
		line-height 1.71429
		margin-bottom 1.5em
		
		&_error
			color lighten($colorMain, 20)
	
	&__row
		position relative
		margin-bottom 15px
		
		&_align_right
			text-align right
			
		&_align_center
			text-align center
		
		&_align_justify
			display flex
			justify-content space-between
			align-items flex-start
			
	&__warning
		position relative
		// z-index 1
		// top 100%
		// left 0
		// width 100%
		padding 10px
		margin 10px 0 0
		font-size 12px
		color lighten($colorMain, 20)
		background-color #fff
		border 1px solid darken($colorDecorative, 10)
		box-shadow 0 2px 10px rgba(#000, .3)
		
		&:before
			position absolute
			top -6px
			left 15px
			size 10px
			content ''
			border-top 1px solid darken($colorDecorative, 10)
			border-right 1px solid darken($colorDecorative, 10)
			background-color #fff
			transform rotate(-45deg)