.form
	display block
	
	&__navigation
		margin-bottom 20px
		display flex
		justify-content space-between
		
	&__navigation-spacer
		flex-grow 1

	&__message
		margin-bottom 1.5em
		line-height 1.71429
		
		&_error
			color lighten($colorMain, 20)
	
	&__section
		margin-bottom 10px
		border none
		
		+above(768px)
			margin-bottom 25px

		^[0]_in-akcent &
			margin-left -10px
			margin-right -10px
			padding 0 10px
			
			+above(768px)
				margin-left -24px
				margin-right -24px
				padding 0 24px
		
		&_separated
			border-bottom 1px dashed $colorDecorative
		
	&__section-wrap
		margin 0 -8px 35px
		padding 30px 8px 5px
		border-top 2px solid #c7dcfc
		border-bottom 2px solid #c7dcfc
		
		+above(768px)
			margin 0 -24px 35px
			padding 30px 26px 5px
			

		&_marked
			background-color #eff5fd

	&__section-name
		margin-bottom 18px
		font-size 18px
		font-weight bold
		-webkit-padding-start 0
		-webkit-padding-end 0
		
	&__collapse-head
		margin 0 -8px 12px
		padding 14px 20px 12px 8px
		display block
		width 100%
		font-size 18px
		font-weight bold
		cursor pointer
		background-color #fff
		
		+above(768px)
			margin 0 -24px 12px
			padding 14px 24px 12px
		
	&__collapse-name
		position relative
		line-height 1.1
		color $colorSecondary
		background-image linear-gradient(to right, $colorDecorative 75%, transparent 75%)
		background-position 0 1.1em
		background-repeat repeat-x
		background-size 8px 1px
		
		.collapse_open &
			color $colorText
		
			
		// border-bottom 1px dashed $colorDecorative
		
			
		/*&:before
			position absolute
			right -35px
			top -1px
			box-sizing border-box
			size 24px
			content ''
			border 1px dashed $colorDecorative*/
			
	&__collapse-icon
		position absolute
		right 0
		top 18px
		size 8px
		display inline-block
		color $colorSecondary
		background-color #fff
		border-left 2px solid
		border-bottom 2px solid
		transform rotate(-45deg)
		
		+above(980px)
			position relative
			top -3px
			right auto
			margin-left 5px

			
		.collapse_open &
			transform rotate(135deg) translate3D(2px, -3px, 0)
			color $colorText
			
	&__group
		margin-bottom 10px
		border none
		
		+above(768px)
			margin-bottom 25px
		
		// &:last-child
		// 	margin-bottom 0
		
	&__group-name
		margin-bottom 18px
		font-size 16px
		
	&__group-item
		margin-bottom 10px
		
	&__head
		margin 0 -8px 12px
		padding 18px 8px
		display block
		font-size 18px
		font-weight bold
		background-color #fffcea
		border-top 1px dashed $colorDecorative
		
		+above(768px)
			margin 0 -24px 12px
			padding 18px 25px
		
	&__row
		position relative
		margin 0 -15px 15px
		// margin-bottom 15px
		display flex
		flex-wrap wrap
		
		&_align_right
			justify-content flex-end
			
		&_align_center
			text-align center
		
		&_align_justify
			justify-content space-between
			align-items flex-start
			
		&_align_left
			justify-content flex-start
			align-items baseline
			
		^[0]__section &:last-child
			margin-bottom 0
			
	&__item
		margin 0 15px 10px
		display inline-flex
		flex-wrap wrap 
		width calc(100% - 30px)
		
		+above(768px)
			margin-bottom 0
			width calc(100% / 12 - 30px)
		
		&_fullwidth
			width calc(100% - 30px)
			
		+above(768px)
			&_tb_fullwidth
				width calc(100% - 30px)
				
			&_tb_2
				width calc(100% / 6 - 30px)
				
			&_tb_3
				width calc(100% / 4 - 30px)
				
			&_tb_4
				width calc(100% / 3 - 30px)

			&_tb_5
				width calc(100% * 5 / 12 - 30px)
				
			&_tb_6
				width calc(50% - 30px)
				
			&_tb_7
				width calc(100% * 7 / 12 - 30px)
		
		+above(980px)
			&_span_2
				width calc(100% / 6 - 30px)
				
			&_span_3
				width calc(100% / 4 - 30px)
				
			&_span_4
				width calc(100% / 3 - 30px)
				
			&_span_5
				width calc(100% * 5 / 12 - 30px)
				
			&_span_6
				width calc(50% - 30px)
				
			&_span_7
				width calc(100% * 7 / 12 - 30px)
				
			&_span_8
				width calc(100% * 2 / 3 - 30px)
			
	&__warning
		position relative
		margin 10px 0 0
		padding 10px
		font-size 12px

		color lighten($colorMain, 20)
		background-color #fff
		border 1px solid darken($colorDecorative, 10)
		box-shadow 0 2px 10px rgba(#000, .3)
		
		&:before
			position absolute
			top -6px
			left 15px
			size 10px
			content ''
			background-color #fff
			border-top 1px solid darken($colorDecorative, 10)
			border-right 1px solid darken($colorDecorative, 10)
			transform rotate(-45deg)
	
	&__remark
		margin-top 10px
		// display inline-block
		display block
		width 100%
		font-size 11px
		line-height 1.2
		color #ababab
		
	&__tab
		&_in-akcent
			margin 0 -8px
			+above(768px)
				margin 0 -24px