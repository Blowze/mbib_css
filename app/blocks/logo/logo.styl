.logo
	padding 0 15px
	display flex
	height 100%
	align-items center
	font-size 36px
	font-weight bold
	text-transform uppercase
	text-shadow 0 2px 0 #b3001a
	color #fff
	background-color $colorMain
	
	&_footer
		padding 0
		text-shadow none
		background-color transparent
	
	&__name
		position relative
		padding-right 8px
		display inline-block
		
		&::after
			position absolute
			right 2px
			top 50%
			size 4px
			margin-top -3px
			content ''
			background-color #fff
			border-radius 1px
