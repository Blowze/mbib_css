.auth
	margin 0 auto
	display block
	max-width 480px
	background-color #fff
	border 1px solid $colorDecorative
	
	&__header
		padding 20px
		display flex
		justify-content space-between
		align-items baseline
		border-bottom 1px solid $colorDecorative
		
	&__header-text
		&&
			margin-bottom 0
		
	&__body
		padding 20px 20px 1px