.tab
	margin-bottom 20px
	display block
	
	// &_default
	
	&__head
		^[0]_simple &
			margin-bottom 15px
			
		^[0]_default &
			background-color #fff
			box-shadow inset 0 2px 0 #f8f8f8
			
	&__head-item
		^[0]_simple &
			margin 0 12px
			display inline-block
			font-size 16px
			font-weight bold
			color $colorSecondary
			text-decoration none
			border-bottom 1px dashed
			
			&:first-child
				margin-left 0
			
		&_active
			^[0]_simple &
				color $colorText
				border-bottom-color transparent
				
		^[0]_default &
			padding 0 30px
			display inline-block
			height 60px
			font-size 18px
			font-weight bold
			line-height 60px
			text-decoration none
			color $colorText
	
	&__content
		display none
		
		&_active
			display block
		
		^[0]_default &
			padding 20px 10px
			
			+above(768px)
				padding 20px 30px
