.generation
	display flex
	flex-wrap wrap
	
	+above(768px)
		margin 0 -1px
		
	+above(768px)
		margin 0 -4px
	
	&__item
		width 50%
		
		+above(768px)
			width 25%
			padding 0 1px
		
		+above(980px)
			width calc(100%/6)
			padding 0 4px

.generation-list
	width 100%
	
	&__item
		position relative
		padding 20px 10px
		display flex
		flex-wrap wrap
		
		+above(768px)
			margin-left -24px
			margin-right -24px
			padding 20px 24px
		
		+above(980px)
			padding 10px 24px 10px 24px

		&:first-child
			+above(768px)
				padding-top 0
			
		&:nth-child(even)
			background-image linear-gradient(to right, #fff, #f8f8f8)
		
	&__head
		width 100%
		margin-bottom 20px
		
		+above(980px)
			position absolute
			top 0
			left 24px
			padding-top 48px

	&__year
		display inline-block
		font-size 22px
		font-weight bold
		
		+above(980px)
			margin-bottom 10px
			display block
		
	&__desc
		display inline
		margin-left 16px
		line-height 1.3
		font-size 16px
		font-weight bold
		color #ababab
		
		+above(768px)
			display inline-block
		
		+above(980px)
			margin-left 0
			display block
			
	&__restyling
		display inline-block
		margin-left 16px
		
		+above(980px)
			display block
			margin-left 0
		
	&__car
		position relative
		margin 0 0 2px
		padding 0 2px
		width 100%
		
		+above(768px)
			width 33.3333%

		+above(980px)
			width 25%
			
	&__car-img
		width 100%
		
		+above(768px)
			max-width 100%
		
	&__car-desc
		position absolute
		bottom 12px
		left 12px
		font-weight bold
		color #fff
		text-shadow 0 2px 6px #000
		
	&__car-link
		display block
		text-decoration none
		
	&__car-type
		margin-bottom 5px
		display block
		font-size 14px
		
	&__car-count
		font-size 12px
		color #fff
		
		&::after
			display inline-block
			content ','
			
		&:last-child::after
			display none
			