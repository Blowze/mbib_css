include ../akcent-block/akcent-block

mixin generation-list(list)
	+akcent-block._plain.generation-list__
		each item, index in list
			+e.DL.item
				+e.DT.head
					+e.H3.year #{item.year}
					+e.P.desc 
						| #{item.desc}
						if item.restyling
							+e.SPAN.restyling рестайлинг
				each car in item.list
					+e.DD.car
						+e.A.car-link(href="")
							+e.FIGURE.car-fig
								+e.IMG.car-img(src=car.img)
						+e.car-desc
							+e.H4.car-type #{car.type}
							if car.old
								+e.A.car-count(href="") #{car.old} с пробегом
							if car.new
								+e.A.car-count(href="") #{car.new} новых