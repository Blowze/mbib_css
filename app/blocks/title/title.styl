.title
	display block
	font-family $fontTitle
	font-weight bold
	
	&_level_1
		margin-bottom 16px
		font-size 26px
		line-height 1.07692
		
		+above(768px)
			margin-bottom 10px
			font-size 34px
			line-height 1.2
		
	&_level_2
		margin-bottom 16px
		font-size 22px
		line-height 1.36
		
		+above(768px)
			margin-bottom 10px
			font-size 30px
			line-height 1.2
			
	&_level_3
		margin-bottom 15px
		font-size 18px
		line-height 1.6
		
		+above(768px)
			font-size 22px
