.list
	display flex
	
	&_columned
		display block
		
	&_column_4
		column-count 4
		column-gap 30px
		
	&_column_5
		column-count 5
		column-gap 30px
		
	&_column_6
		column-count 6
		column-gap 30px
		
	&_size_s
		font-size 12px
	
	&__item
		display flex
		align-items flex-start
		
		&:after 
			position relative
			top -1px
			margin 0 7px
			content '|'
			color $colorSecondary
			
		^[0]_columned &
			display block
			
			&:after
				display none
			
	&__link
		padding-bottom 2px
		display inline-block
		text-decoration none
		color $colorSecondary
		transition color .3s, border-color .3s
		border-bottom 1px solid transparent
		
		&:hover
			color $colorMain
			border-bottom-color currentcolor
			
		^[0]_columned &
			padding 3px 0
			line-height 1.3
			color darken($colorDecorative, 40)
			border-bottom none
			
			&:hover
				text-decoration underline 
				
		^[0]_size_s &
			padding 4px 0