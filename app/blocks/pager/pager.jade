include ../control-group/control-group
include ../control/control

mixin pager()
	+b.pager&attributes(attributes)
		+control-group
			+control(href="")._disabled.pager__prev
				+icon('pagin-left', true).pager__icon
				span.pager__text Назад
			+control(href="").pager__item.pager__item_active 1
			+control(href="").pager__item 2
			+control(href="").pager__item 3
			+control(href="").pager__item 4
			+control(href="").pager__item 5
			//- +control(href="").pager__item 6
			//- +control(href="").pager__item …
			//- +control(href="").pager__item 11
			+control(href="").pager__next
				+icon('pagin-right', true).pager__icon
				span.pager__text Вперёд
