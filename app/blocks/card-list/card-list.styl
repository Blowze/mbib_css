.card-list
	margin-bottom 12px
	display block
	
	&__list
		margin-bottom 10px
		
	&__item
		padding 10px
		width 100%
		background-color #fff
		border-top 1px solid #f5f5f5
		
		+above(768px)
			padding 16px
			display table

		&:hover
			position relative
			z-index 1
			background-color lighten($colorDecorative, 10)
			border-top-color transparent
			box-shadow 0 0 20px $colorDecorative
			
		&_mark
			background-color #fffcea
			box-shadow inset 0 0 0 3px #fff3b5 // 0 0 20px $colorDecorative
			
			&:hover
				box-shadow inset 0 0 0 3px #fff3b5, 0 0 20px $colorDecorative
		
	&__thumb
		position relative
		margin-bottom 16px
		font-size 0
		
		+above(768px)
			margin-bottom 0
			display table-cell
			width 254px
			vertical-align top

	&__gallery
		position absolute
		top 0
		left 0
		bottom 0
		width 100%
	
	&__about
		+above(768px)
			padding 0 30px
			display table-cell
			vertical-align top
		
	&__about-item
		margin-bottom 16px
		
	&__contact
		margin-bottom 10px
		
		+above(768px)
			display table-cell
			width 200px
			vertical-align top
			margin-bottom 0
		
	&__action
		+above(768px)
			display table-cell
			width 54px
			vertical-align middle
			opacity 0
			
			^[0]__item:hover &
				opacity 1
	
	&__name
		position relative
		top -1px
		margin-bottom 15px
		font-size 16px
		font-weight bold
		
	&__name-link
		display inline-block
		text-decoration none
		color $colorSecondary
		transition color .3s
		
		&:hover
			text-decoration underline
			color $colorMain
		
	&__price
		margin-right 42px
		display inline-block
		font-size 16px
		font-weight bold
		
	&__feature
		line-height 1.73
		
	&__remark
		color darken($colorDecorative, 40)
		
	&__comment
		margin -10px 0 10px
		font-size 12px
		line-height 1.5
		
		+above(768px)
			display none
		
	&__place,
	&__pubdate
		font-size 12px
		color darken($colorDecorative, 40)
		
	&__author
		margin-bottom 15px
		line-height 1.3

	&__phone
		position relative
		padding 9px 12px 9px 32px
		display block
		text-decoration none
		color inherit
		background-color #fff
		border 1px dashed $colorSecondary
		
		+above(768px)
			display inline-block
			
	&__phone-icon
		position absolute
		top 11px
		left 15px
		size 12px
		
		
	&__phone-button
		background-color transparent
		border none
		
	&__phone-number
		display inline-block
		font-size 16px
		font-weight bold
		color $colorSecondary
		
		& + ^[0]__phone-remark
			margin-top 12px
		
	&__phone-remark
		margin-top 9px
		display block
		font-size 11px