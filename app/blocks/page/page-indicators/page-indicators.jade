            +e.title
                +title(2)._no-margin Показатели портала mbib.ru
            +e.row 
                +e.col 
                    +e.icon
                        img(src="assets/images/icons/look.svg", alt="")
                    +e.name 1 271 127 332 раза
                    +e.text объявления наших пользователей были показаны потенциальным покупателям
                +e.col 
                    +e.icon
                        img(src="assets/images/icons/phone.svg", alt="")
