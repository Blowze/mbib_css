.page-works
    margin-top 48px
    padding-bottom 28px
    &__title
        text-align center
        margin-bottom 20px
        .title
            font-size 24px
        +above(768px)
            margin-bottom 32px
            .title
                font-size 28px
                line-height 33px
        +above(1170px)
            margin-bottom 48px
            .title
                font-size 32px
                line-height 37px
    &__item
        display flex
        margin-bottom 28px
        &:last-child
            margin-bottom 0
        +above(768px)
            width 50%
            flex-wrap wrap
            flex-direction column
        +above(1170px)
            width calc(100%/4)
    &__row
        +above(768px)
            display flex
            flex-wrap wrap
    &__icon
        min-width 48px
        min-height 48px
        max-width 48px
        max-height 48px
        background #CB1239
        border-radius 50%
        margin-right 16px
        display flex
        align-items center
        justify-content center
        +above(768px)
            width 64px
            height 64px
            max-width 64px
            max-height 64px
            margin-bottom 16px
    &__name
        font-weight bold
        font-size 18px
        line-height 24px
        margin-bottom 8px
    &__text
        color #787878
        font-size 16px
        line-height 24px
        +above(768px)
            max-width 85%
    &__content
        +above(768px)
            width 100%
        