.action
	display block
	font-size 0
	
	&__item
		margin 0 20px 10px
		padding 0 15px
		display block
		height 36px
		font-size 1rem
		line-height 36px
		text-decoration none
		color $colorText
		background-color #fff
		border 1px dashed $colorDecorative
		
		+above(768px)
			margin-bottom 0
			padding 0 20px
			display inline-block
			
		+above(980px)
			font-weight bold
		
		^[0]_only-icon &
			position relative
			margin-left 0
			margin-right 0

			+above(980px)
				margin 0 auto 5px
				padding 0
				display block
				size 30px
				font-size 11px
				font-weight normal
				line-height @height
				text-align center
				background-color transparent
				border none
			
			&:last-child
				margin-bottom 0
		
	&__item-text
		line-height 1.2
		
		^[0]_only-icon &
			+above(980px)
				position absolute
				z-index 1
				top -2px
				right 100%
				margin-right 5px
				padding 9px 18px 8px
				white-space nowrap
				color darken($colorDecorative, 40)
				background-color #fff
				border 1px solid $colorDecorative
				box-shadow 0 2px 8px rgba($colorDecorative, .4)
				opacity 0
				pointer-events none
				transform translate3D(-10px, 0, 0)
				transition opacity .3s, transform .3s
			
			&:before
				position absolute
				z-index -1
				right -5px
				top 50%
				margin-top -3px
				size 7px
				content ''
				background-color #fff
				border-top 1px solid $colorDecorative
				border-right 1px solid $colorDecorative
				transform rotate(45deg)
				
		^[0]_only-icon ^[0]__item:hover &
			opacity 1
			transform translate3D(0, 0, 0)
	
	&__icon
		position relative
		top -2px
		margin-right 6px
		display inline-block
		size 20px
		vertical-align middle
		
		^[0]_only-icon &
			size 20px
			fill $colorText
			transition fill .3s
			
		^[0]_only-icon ^[0]__item:hover &
			fill $colorMain