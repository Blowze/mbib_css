.phone-field
	display flex
	width 100%
	
	&__control
		flex-grow 1
		
	&__button
		position relative
		width 40px
		flex-shrink 0
		border 1px solid $colorDecorative
		border-left none
		background-color transparent
		transition background-color .2s
		
		&:hover
			background-color $bgDecorative
			
		&_append
			font-size 0
			
			&:before
				content ''
				position absolute
				top 50%
				left 50%
				margin -1px 0 0 -7px
				width 14px
				height 2px
				background-color #777
				
			&:after
				content ''
				position absolute
				top 50%
				left 50%
				margin -7px 0 0 -1px
				width 2px
				height 14px
				background-color #777
				
		&_remove
			font-size 0
			
			&:before
				content ''
				position absolute
				top 50%
				left 50%
				margin -1px 0 0 -7px
				width 14px
				height 2px
				background-color #777