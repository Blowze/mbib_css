.nav
	padding 0 30px
	display block
	height 100%
	
	&_footer,
	&_sidenav
		padding 0
	
	&__list
		font-size 16px
		
		+above(768px)
			display flex
			justify-content center
			align-items center
			height 100%
		
		^[0]_footer &
			font-size 14px
			
		^[0]_sidenav &
			display block
			height auto
		
	&__item
		flex-grow 1
		height 100%

		^[0]_footer &
			display inline-block
			height auto
			
			+above(768px)
				display block

	&__link
		padding 10px 0
		display block
		align-self center
		text-decoration none
		color #fff
		
		+above(768px)
			padding 10px 0
			display flex
			height 100%
			align-items center
			justify-content center
			transition background-color .3s, color .3s
			
		&:hover
			color #fff
			background-color $colorMain
			
		^[0]_footer &
			display block
			padding 10px 0
			
			+above(768px)
				padding 10px
				
			&:hover
				color $colorMain
				background-color transparent
		
		^[0]_sidenav &
			padding-left 0
			padding-right 0
			display inline-block
			text-align left
			
			&:hover
				color $colorMain
				background-color transparent
		
	&__link-text
		display inline-block
		border-bottom 1px solid rgba(#fff,.23)
		transition border-color .3s
		
		^[0]__link:hover &
			border-bottom-color currentcolor