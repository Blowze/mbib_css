.tile
  display block
  height 100%

  &__fig
    position relative
    // height 100%
    padding-bottom 75%
    font-size 0
    text-align center

    img
      width 100%
      max-width 100%
      max-height 100%
      height 100%
      object-fit cover
      opacity 1 !important
      transition none !important

    & > img
      position absolute
      top 0
      left 0

  &__gallery
    position absolute
    z-index 5
    top 0
    left 0
    bottom 0
    width 100%

  &__about
    padding 8px 10px 15px

  &__name
    margin-bottom 9px
    font-weight bold
    line-height 1.14286

  &__desc
    margin-bottom 8px
    color darken($colorDecorative, 40)

  &__price
    color $colorMain

  &__address
    font-size 12px
    color darken($colorDecorative, 20)
