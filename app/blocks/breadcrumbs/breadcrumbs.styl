.breadcrumbs
	margin-bottom 5px
	display block
	font-size 12px
	
	&__item
		position relative
		padding-right 20px
		display inline-block
		
		&:after
			position absolute
			top 50%
			right 1px
			margin-top -6px
			font-family Georgia, serif
			font-size 12px
			content '\2192'
			color #787878
			
		&:last-child
			padding-right 0
			
			&:after
				display none

	&__link
		padding 5px 0
		display block
		text-decoration none
		color #787878
