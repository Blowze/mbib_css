.card
	margin 20px 0 30px
	display block
	
	&__head
		+above(980px)
			padding 17px 18px 5px
			background-color #fff
			border-bottom 1px solid $colorDecorative
		
	&__body
		+above(980px)
			background-color #fff
	
	&__meta
		margin-bottom 15px
		
		+above(768px)
			margin-bottom 0
			padding-top 5px
			display flex
			justify-content space-between
			flex-wrap wrap
			
		+above(980px)
			padding 10px 19px 0
			
	&__meta-id
		margin-bottom 18px
		
		+above(768px)
			margin-bottom 6px
			width 50%
			flex-basis 50%
			padding-right 15px
			
		+above(980px)
			margin-bottom 0
			width 20%
			max-width 210px
			flex-basis unset
	
	&__meta-inspect
		margin-bottom 18px
		
		+above(768px)
			margin-bottom 6px
			width 50%
			flex-basis 50%
			padding-left 15px
			
		+above(980px)
			margin-bottom 0
			padding-right 15px
			width auto
			flex-basis unset
			
	&__meta-seller
		+above(768px)
			margin-bottom 6px
			padding-right 15px
			width 50%
			flex-basis 50%
			
		+above(980px)
			margin-bottom 0
			padding-right 15px
			width 20%
			flex-basis unset
		
	&__meta-lbl
		margin-bottom 10px
		color darken($colorDecorative, 40)
		
		+above(768px)
			margin-right 5px
			float left
			
		+above(980px)
			margin-right 0
			float none
		
	&__meta-row
		margin-bottom 10px
		
	&__meta-remark
		margin-left 6px
		font-size 12px
		color darken($colorDecorative, 40)
		
		&:first-child
			margin-left 0
			
	&__meta-date
		margin-right 5px

	&__meta-view-icon
		position relative
		top 1px
		margin-right 4px
		display inline-block
		size 12px
		fill darken($colorDecorative, 40)

	&__meta-price
		+above(768px)
			padding-left 15px
			align-items center
			display flex
			box-sizing 50%
			width 50%
			justify-content space-between
			
		+above(980px)
			display block
			width 20%
			flex-basis unset
			
	&__meta-action
		+above(980px)
			margin-left 18px
			
	&__price
		position relative
		
		+above(768px)
			padding-left 21px
			overflow-y hidden
			height 50px

			&:before
				position absolute
				z-index 0
				top -5px
				left 0
				content ''
				border-top 30px solid rgba(#fff, 0)
				border-right 25px solid #b3001a
				border-bottom 30px solid rgba(#fff, 0)
				
		/*+above(980px)
			margin-top 17px*/
		
	&__price-value
		position relative
		display block
		font-size 32px
		font-weight bold
		color $colorMain
		
		+above(768px)
			padding 10px 15px 5px 5px
			height 50px
			color #fff
			background-color $colorMain
			background-image linear-gradient(to right, #b3001a, $colorMain)

	&__price-currency
		font-size 28px
		font-weight normal
		
	&__meta-phone
		+above(768px)
			// width 100%
			letter-spacing 1px
			text-transform uppercase
		
	&__ads
		margin-bottom 0
		
		img
			max-width 100%
		
	&__data
		+above(768px)
			padding 10px 10px 1px
			background-color #fff

		+above(980px)
			padding 20px 20px 1px
			
		
	&__data-row
		+above(980px)
			display flex
			flex-wrap wrap
		
	&__feature
		margin-bottom 15px
		width 100%
		
		+above(980px)
			margin-bottom 0
			padding-right 15px
			width 41%
			order 1
			
			^[0]__data_nophoto &
				order 0
		
	&__feature-list
		margin 12px 0 19px
		
		+above(768px)
			margin 12px -15px 19px
			display flex
			flex-wrap wrap
			
		+above(980px)
			display block
		
	&__feature-row
		padding 10px 0 11px
		display flex
		border-bottom 1px solid $colorDecorative
		
		+above(768px)
			margin-right 15px
			margin-left 15px
			flex-basis 40%
			flex-grow 1
		
		&:last-child
			border-bottom none
	
	&__feature-term
		width 150px
		flex-basis 150px
		color darken($colorDecorative, 40)
		
	&__feature-desc
		&::first-letter
			text-transform uppercase
		
	&__gallery
		margin-bottom 15px
		width 100%
			
		+above(980px)
			margin-bottom 15px
			padding-left 15px
			width 59%
			order 2
		
		img
			max-width 100%

	&__yad
		margin-bottom 24px
		width 100%
		
		img
			max-width 100%
			
		^[0]__feature & 
			+above(768px)
				display none
			
			+above(980px)
				display block
	
	&__holder 
		+above(980px)
			width 59%

	&__kit
		+above(980px)
			padding-right 15px
			width 50%
			
			^[0]__data_nophoto &
				padding-right 0
				width 100%
		
	&__kit-head
		margin-bottom 19px
		
	&__kit-list
		+above(768px)
			margin 0 -15px
			display flex
			flex-wrap wrap
		
	&__kit-item
		margin-bottom 23px
		
		+above(768px)
			padding 0 15px
			width 33%
			
		+above(980px)
			width 50%
		
	&__kit-title
		margin-bottom 9px
		font-size 16px
		font-weight bold
		
	&__kit-desc
		margin-bottom 10px
		
	&__comment
		+above(768px)
			margin-bottom 15px
			
		+above(980px)
			margin-bottom 23px
			padding-left 15px
			width 50%
			
			^[0]__data_nophoto &
				padding-left 0
				width 100%
			
	&__comment-body
		line-height 1.71429
		
	&__action
		margin-top 12px
		
		+above(768px)
			padding 7px 20px
			display flex
			justify-content space-between
			align-content flex-end
			align-items center
			background-color #fff