.result-message
  padding-top 5px
  margin-bottom 15px
  display flex
  color #787878
  font-size 10px

  +above(480px)
    font-size 12px

  +above(768px)
    font-weight bold
    font-size 16px

  &__text
    line-height 1.71429
    margin-right 6px

    &:last-child
      margin-right 0

    +above(768px)
      margin-right 10px
