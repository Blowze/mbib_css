.checkbox
	position relative
	padding-left 35px
	height 25px
	line-height 25px
	
	&__control
		position absolute
		left -9999px

	&__text
		position relative
		margin-top 1px
		display inline-block
		vertical-align top
		
		&:before
			position absolute
			top -1px
			left -35px
			margin 0 4px 0 0
			width 25px
			height 25px
			vertical-align middle
			cursor pointer
			content ''
			background-color #fff
			border 1px solid $colorDecorative
			transition background-color .3s, border-color .3s
			
		&:hover:before
			border 1px solid $colorDecorative
			
		
	&__control:checked:focus + &__text:before,
	&__control:checked + &__text:before
		background-color darken($colorDecorative, 20)
		border-color darken($colorDecorative, 20)
		
	&__control:checked:focus + &__text:before,
	&__control:focus + &__text:before 
		border-color $colorSecondary
		
	&__control + &__text:after
		position absolute
		top 8px 
		left -27px
		width 10px
		height 4px
		content ''
		border-left 3px solid #fff
		border-bottom 3px solid #fff
		opacity 0
		transition all .3s
		transform scale(0) rotate(-50deg)
		
	&__control:checked + &__text:after
		transform scale(1) rotate(-50deg)
		opacity 1