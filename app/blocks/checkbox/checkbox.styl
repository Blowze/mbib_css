.checkbox
	position relative
	margin-right 20px
	padding-left 35px
	display inline-block
	min-height 25px
	line-height 25px
	
	&:last-child
		margin-right 0
	
	&__control
		position absolute
		left -9999px

	&__text
		position relative
		padding-top 4px
		display inline-block
		vertical-align top
		line-height 1.2
		
		&:before
			position absolute
			top -1px
			left -35px
			margin 0 4px 0 0
			box-sizing border-box
			width 25px
			height 25px
			vertical-align middle
			cursor pointer
			content ''
			background-color #fff
			border 1px solid $colorDecorative
			transition background-color .3s, border-color .3s
			
		&:hover:before
			border 1px solid $colorDecorative
			
		
	&__control:checked:focus + &__text:before,
	&__control:checked + &__text:before
		background-color $colorMain
		border-color $colorMain
		
	&__control:checked:focus + &__text:before,
	&__control:focus + &__text:before 
		border-color $colorMain
		
	&__control + &__text:after
		position absolute
		top 7px 
		left -29px
		width 10px
		height 4px
		content ''
		border-left 3px solid #fff
		border-bottom 3px solid #fff
		opacity 0
		transition all .3s
		transform scale(0) rotate(-50deg)
		
	&__control:checked + &__text:after
		transform scale(1) rotate(-50deg)
		opacity 1