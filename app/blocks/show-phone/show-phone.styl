.show-phone
  &__button
    display block
    width 100%
    font-weight bold
    height 55px

  &__text
    display block
    line-height 1

  &__label
    margin-bottom 7px
    display block
    font-size 14px
    text-transform none

  &__placeholder
    font-size 18px
    line-height 1

  &__link
    display none
    height 55px
    font-weight bold
    font-size 24px
    line-height 53px
    text-align center
    border 2px dashed

    &_small-size
      margin-bottom 1px
      height 32px
      font-size 16px
      line-height 32px
      border-width 1px

  &_visible-phone &__button
    display none

  &_visible-phone &__link
    display block
