.search
	position relative
	margin-bottom 35px
	padding 14px 8px 0
	display block
	background-color #fff
	background-image linear-gradient(to right, lighten($colorDecorative, 10), #fff)
	border 2px solid $colorDecorative
	
	+above(768px)
		margin-bottom 27px
		padding 10px 24px 0
		display table
		box-shadow 0 27px 23px -12px rgba(#000, .2)
	
		&:after
			position absolute
			top 100%
			right 0
			left 0
			margin-top 2px
			content ''
			background-color transparent
			background-clip border-box
			border-top 4px solid darken($colorDecorative, 20)
			border-left 5px solid rgba(#fff, 0)
			border-right 5px solid rgba(#fff, 0)
			
	+above(980px)
		display block

	&__city
		margin-bottom 10px
		
		+above(768px)
			display flex
			justify-content space-between
		
	&__city-list
		+above(768px)
			flex-wrap wrap
			flex-shrink 1

	&__city-btn
		display block
		
		+above(768px)
			display inline-block
			white-space nowrap
		
	&__city-other
		margin-top 8px
		text-align center
		
		+above(768px)
			margin-top 0
			flex-grow 1
			margin-left 15px
			
		+above(980px)
			flex-grow 0
			
	&__advanced
		overflow hidden
		width 100%
		max-height 0
		transition max-height .4s
		
		^[0]_show-advanced &
			max-height 3000px
			
	&__advanced-inner
		padding-top 10px
		
		+above(768px)
			clear both
		
	&__row
		+above(768px)
			margin 0 -10px 15px
			
		+above(980px)
			margin-bottom 10px
			display flex
			align-items flex-start
			flex-wrap nowrap
			
		+above(1170px)
			margin-right -15px
			margin-left -15px
			
		^[0]__advanced &
			+above(768px)
				display flex
				align-items flex-start
				flex-wrap wrap
				
			+above(980px)
				flex-wrap nowrap
				
			&:last-child
				margin-bottom 0
			
		&_sbm
			margin-bottom 10px
			
			+above(980px)
				margin-top -1px
				clear none
		
	&__col
		position relative
		margin-bottom 8px
		
		+above(768px)
			margin-bottom 15px
			padding 0 10px
			width 50%
			float left
			// flex-basis 50%
			
		+above(980px)
			margin-bottom 0
			width 20%
			flex-basis 20%
			float none
		
			&_span_2
				width 40%
				flex-basis 40%
				
			&_span_3
				width 25%
				flex-basis 25%
				
			&_span_4
				width 60%
				flex-basis 60%
				
		+above(1170px)
			padding-right 15px
			padding-left 15px
		
		&_for-checkbox
			margin 20px 0 23px
			height $heightControl
			
			+above(768px)
				margin-top 7px
				margin-bottom unset
				
			+above(980px)
				margin-top unset
				height auto
				align-self center
				
		&_sbm
			text-align right
			
			+above(768px)
				width 100%
			
			+above(980px)
				display flex
				justify-content flex-end
				
	&__item
		margin-bottom 10px

	&__check
		margin-right 34px
		display inline-block
	
	&__icon-search
		position absolute
		z-index 2
		top 12px
		left 15px
		size 18px
		fill darken($colorDecorative, 40)
		pointer-events none
		
		+above(768px)
			left 32px
			
	&__switcher
		position relative
		margin-right 20px
		padding-left 18px
		color $colorMain
		
		&::before,
		&::after
			position absolute
			left 0
			top 50%
			display inline-block
			vertical-align middle
			size 8px
			content ''
			border-top 2px solid
			border-left 2px solid
			transform rotate(225deg) translate3d(2px, 5px, 0)
			
			^[0]_show-advanced &
				transform rotate(45deg) translate3d(2px, -2px, 0)
		
		&::before
			margin-top -4px
			
		&::after
			margin-top 2px
			
	&__palette
		flex-wrap wrap

	&__sbm
		width 100%
		
		+above(768px)
			width auto
			