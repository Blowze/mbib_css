.search
	position relative
	margin-bottom 35px
	padding 14px 8px 0
	display block
	background-color #fff
	background-image linear-gradient(to right, lighten($colorDecorative, 10), #fff)
	border 2px solid $colorDecorative
	
	+above(768px)
		margin-bottom 47px
		padding 27px 24px 0
		display table
		box-shadow 0 27px 23px -12px rgba(#000, .2)
	
		&:after
			position absolute
			top 100%
			right 0
			left 0
			margin-top 2px
			content ''
			background-color transparent
			background-clip border-box
			border-top 4px solid darken($colorDecorative, 20)
			border-left 5px solid rgba(#fff, 0)
			border-right 5px solid rgba(#fff, 0)
			
	+above(980px)
		display block

	&__city
		margin-bottom 22px
		
		+above(768px)
			display flex
			justify-content space-between
		
	&__city-list
		+above(768px)
			flex-wrap wrap
			flex-shrink 1

	&__city-btn
		display block
		
		+above(768px)
			display inline-block
			white-space nowrap
		
	&__city-other
		margin-top 8px
		text-align center
		
		+above(768px)
			margin-top -9px
			flex-grow 1
			margin-left 15px
			
		+above(980px)
			flex-grow 0
		
	&__row
		+above(768px)
			margin 0 -15px 15px
			
		+above(980px)
			margin-bottom 24px
			display flex
			align-items center
			flex-wrap wrap
			
		&_sbm
			margin-bottom 10px
			
			// +above(768px)
			// 	clearfix()

			+above(980px)
				margin-top -1px
				margin-bottom 24px
				clear none
		
	&__col
		position relative
		margin-bottom 8px
		
		+above(768px)
			margin-bottom 15px
			padding 0 15px
			width 50%
			float left
			// flex-basis 50%
			
		+above(980px)
			margin-bottom 0
			width 20%
			flex-basis 20%
		
			&_span_2
				width 40%
				flex-basis 40%
		
		&_for-checkbox
			margin 20px 0 23px
			
			+above(768px)
				margin-top unset
				margin-bottom unset

	&__check
		margin-right 34px
		display inline-block
	
	&__icon-search
		position absolute
		top 12px
		left 32px
		size 18px
		fill darken($colorDecorative, 40)
		pointer-events none