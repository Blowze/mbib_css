.sort
  display flex

  +above(768px)
    justify-content space-between

  &__simple
    margin-bottom: -15px;
    display: block;
    width 100%

  &__by
    width 50%
    flex-grow 1

    +above(768px)
      margin-left 0
      width 255px
      flex-grow 0

  &__type
    margin-left -1px
    width 50%

    +above(768px)
      margin-left 0
      width 255px

  &__link
    margin-right: 20px;
    margin-bottom: 15px;

    display: inline-block;

    color darken($colorDecorative, 60)
    text-decoration-line underline

    &_active
      color $colorMain
      text-decoration none
