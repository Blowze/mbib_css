include ../btn/btn

mixin credit-offer()
  +b.credit-offer.block
    +e.UL.list
      +e.list-item
        +e.bank.collapse
          +e.bank-logo
            +e.bank-logo-img
              img(src="", alt="")
            +e.bank-rating
          +e.bank-data
            +e.name
            +e.bank-price-wrap
              +e.bank-price-item
                +e.bank-value 5,60%
                +e.bank-label Ставка в год
              +e.bank-price-item
                +e.bank-value 46 877 Р/мес
                +e.bank-label Платеж
              +e.bank-price-item
                +e.bank-value -137 587 Р
                +e.bank-label Переплата

          +e.bank-actions
            +e.BUTTON.compare(type="button") Сравнить
            +btn('link')(href="" target="_blank") Перейти

          +e.additional.collapse__body
            +e.bank-filial
            +e.UL.bank-feature
              +e.bank-feature-item Сумма от 100 000 до 3 000 000
              +e.bank-feature-item Без первоначального взноса
              +e.bank-feature-item Срок от 1 года 1 месяца до 5 лет
              +e.bank-feature-item Процентная ставка от 5,60% до 9,50%
              +e.bank-feature-item Возраст заемщика от 20 года
              +e.bank-feature-item Подтверждение платёжеспособности: не требуется, по ф. банка, 2‑НДФЛ, 3‑НДФЛ, ПФР.
              +e.bank-feature-item Кредит погашается ежемесячно равными (аннуитетными) платежами
              +e.bank-feature-item Стаж на последнем месте работы от 3 месяцев
              +e.bank-feature-item Можно без КАСКО



          +e.SMALL.remark Лиц. № 354



