.share
  display flex
  align-items center
  justify-content center

  +above(768px)
    justify-content flex-start

  &_simple
    flex-wrap wrap

  &__lbl
    display none

    +above(980px)
      margin-right 30px
      display block
      font-weight bold

    ^[0]_simple &
      +above(980px)
        margin-right 10px
        margin-bottom 10px
        flex-grow 1
        width 100%

  .btn-social-icon
    margin-right 5px

  &__item
    margin 0 5px
    display inline-flex
    align-items center
    justify-content center
    width 24px
    height  24px
    color #fff
    border-radius 4px

    &:first-child
      margin-left 0

    +above(768px)
      margin 0 5px

    &_fb
      background-color #3b5998

    &_twi
      background-color rgba(29,161,242,1.00)

    &_vk
      background-color #4a76a8

    &_ok
      background-color #ee8208

  &__icon
    width 16px
    height 16px
